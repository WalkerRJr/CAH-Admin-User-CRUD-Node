<%- include('./layout/header') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
             <div class="alert alert-dismissible fade show alert-<%= message.type %> " role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" 
                aria-label="Close"></button>
                <strong><%= message.message %></strong>
             </div>
            <% } %>
            <div class="table-responsive">
                <% if (credential != '') { %>
                    <table class="table table-striped my-1 fs-12">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Email</th>
                                <th>Password (bcrypt)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% credential.forEach((row, index) => { %>
                            <tr class="align-middle">
                                <td><%= index %></td>
                                <td><img src="/uploads/<%= row.image %>" width="50" class="img-thumbnail"></td>
                                <td><b><%= row.email %></b></td>
                                <td><%= row.password %> </td>
                                <td>
                                   <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit mx-1 fs-6"></i></a> 
                                   <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash mx-1 fs-6"></i></a> 
                                </td>
                            </tr> 
                           <% }) %>
                        </tbody>
                    </table>                 
                <% } else { %>
                    <h1 class="text-center text-danger mt-5 fs-5">No users found in the database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>