<%- include('layout/header2') %>


<div class="p-5">
    <div class="row">
        <div class="container">
            <div class="card shadow w-50 center">
                <div class="card-header bg-primary" style="cursor: default;">
                    <h4 class="text-light">Add New User
                        <button type="button" class="btn-close btn-sm float-end" aria-label="Close" onclick="cancelEdit()"></button>
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-2">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" name="username" class="form-control form-control-sm" placeholder="Enter username" required />
                            </div>
                            <div class="col-md-8">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" name="password" class="form-control form-control-sm" placeholder="Enter password" autocomplete="new-password" id="password" />
                            </div>
                            <div class="col-md-1 p-4 me-2">
                                <i class="fas fa-eye-slash" id="togglePassword"></i>
                            </div>
                        </div>
                        <div class="col-md-10 mt-4 pt-6">
                            <input type="submit" name="submit" value="Add User" class="btn btn-primary" />
                            <button type="button" class="btn btn-outline-secondary" onclick="cancelEdit()">Cancel</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function cancelEdit() {
      // Redirect to the previous page or perform other actions to cancel the edit
      window.history.back(); // Example: Go back to the previous page
    }
</script>



